{
  "name": "Ephemeral Chat",
  "short_name": "EphChat",
  "description": "Secure, anonymous, and ephemeral chat application",
  "start_url": "./",
  "scope": "./",
  "display": "standalone",
  "background_color": "#1f2937",
  "theme_color": "#4F46E5",
  "orientation": "portrait",
  "categories": ["social", "communication", "productivity"],
  "icons": [
    {
      "src": "pwa-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "pwa-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "maskable-icon.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "screenshot-chat.png",
      "sizes": "1280x800",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Chat Interface"
    },
    {
      "src": "screenshot-room.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Chat Room"
    }
  ],
  "shortcuts": [
    {
      "name": "New Chat",
      "short_name": "New",
      "description": "Start a new chat room",
      "url": "/new",
      "icons": [{ "src": "icons/plus.png", "sizes": "192x192" }]
    },
    {
      "name": "Join Chat",
      "short_name": "Join",
      "description": "Join an existing chat room",
      "url": "/join"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://ephemeral-chat-iota.vercel.app/manifest.json"
    }
  ],
  "dir": "ltr",
  "lang": "en-US",
  "splash_pages": null,
  "serviceworker": {
    "src": "/sw.js",
    "scope": "/",
    "use_cache": true
  }
}
