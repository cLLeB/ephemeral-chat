{
  "id": "com.ephemeral-chat.app",
  "name": "Ephemeral Chat",
  "short_name": "EphChat",
  "description": "Secure, anonymous, and ephemeral chat rooms. Messages disappear when you leave, ensuring your privacy and security. No registration required.",
  "start_url": "./",
  "scope": "./",
  "display": "standalone",
  "background_color": "#1f2937",
  "theme_color": "#4f46e5",
  "orientation": "portrait",
  "categories": [
    "social",
    "communication",
    "productivity",
    "utilities",
    "security"
  ],
  "icons": [
    {
      "src": "pwa-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "pwa-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "maskable-icon.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "logo.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any"
    }
  ],
  "screenshots": [
    {
      "src": "screenshot-home.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Ephemeral Chat Home Screen"
    },
    {
      "src": "screenshot-chat.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Real-time Messaging Interface"
    },
    {
      "src": "screenshot-join.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Join Private Rooms"
    }
  ],
  "shortcuts": [
    {
      "name": "Join Chat",
      "short_name": "Join",
      "description": "Join an existing chat room with a code",
      "url": "/join",
      "icons": [
        {
          "src": "pwa-192x192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://chat.kyere.me/manifest.json"
    }
  ],
  "dir": "ltr",
  "lang": "en-US",
  "display_override": [
    "window-controls-overlay",
    "minimal-ui"
  ],
  "handle_links": "auto",
  "launch_handler": {
    "client_mode": "navigate-existing"
  }
}