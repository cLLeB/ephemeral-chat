{
  "name": "ephemeral-chat",
  "version": "1.0.0",
  "description": "Anonymous, temporary chat rooms with real-time messaging",
  "main": "server/index.js",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": ["chat", "websocket", "anonymous", "ephemeral", "real-time"],
  "author": "Ephemeral Chat Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "redis": "^4.6.8",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
