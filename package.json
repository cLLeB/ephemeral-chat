{
  "name": "ephemeral-chat",
  "version": "1.0.0",
  "description": "Anonymous, temporary chat rooms with real-time messaging",
  "main": "server/index.js",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "simple": "node server/simple-server.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm install && npm run build",
    "start": "node server/index.js",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "chat",
    "websocket",
    "anonymous",
    "ephemeral",
    "real-time"
  ],
  "author": "Ephemeral Chat Team",
  "license": "MIT",
  "dependencies": {
    "@cap.js/server": "^4.0.4",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "fluent-ffmpeg": "^2.1.3",
    "lamejs": "^1.2.1",
    "redis": "^4.6.8",
    "sanitize-html": "^2.17.0",
    "socket.io": "^4.7.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.2.0",
    "esbuild": "^0.27.2",
    "nodemon": "^3.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  }
}